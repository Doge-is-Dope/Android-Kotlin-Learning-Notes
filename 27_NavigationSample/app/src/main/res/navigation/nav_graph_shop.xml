<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_shop"
    app:startDestination="@id/shopFragment">

    <fragment
        android:id="@+id/shopFragment"
        android:name="com.chunchiehliang.navigationsample.shop.ShopFragment"
        android:label="Shopping"
        tools:layout="@layout/fragment_shop">
        <action
            android:id="@+id/action_to_userDetailsFragment"
            app:destination="@id/userDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/userDetailsFragment"
        android:name="com.chunchiehliang.navigationsample.user.UserDetailsFragment"
        android:label="User details in Shop"
        tools:layout="@layout/fragment_user_details"/>
</navigation>