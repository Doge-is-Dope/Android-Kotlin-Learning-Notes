<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/exploreFragment">

    <fragment
        android:id="@+id/componentListFragment"
        android:name="com.chunchiehliang.material3.ui.list.ComponentListFragment"
        tools:layout="@layout/fragment_component_list">
        <action
            android:id="@+id/action_to_sort"
            app:destination="@id/sortFragment" />
        <action
            android:id="@+id/action_to_filter"
            app:destination="@id/filterFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.chunchiehliang.material3.ui.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.chunchiehliang.material3.ui.explore.ExploreFragment"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_to_list"
            app:destination="@id/componentListFragment" />
    </fragment>

    <dialog
        android:id="@+id/sortFragment"
        android:name="com.chunchiehliang.material3.ui.sort.SortFragment"
        tools:layout="@layout/fragment_sort" />

    <dialog
        android:id="@+id/filterFragment"
        android:name="com.chunchiehliang.material3.ui.filter.FilterFragment"
        tools:layout="@layout/fragment_filter" />

</navigation>