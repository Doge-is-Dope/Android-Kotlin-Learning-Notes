        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginHorizontal="@dimen/material_margin"-->
        <!--            android:layout_marginBottom="@dimen/material_margin" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingHorizontal="@dimen/material_margin"
            tools:listitem="@layout/item_search_term" />
    </LinearLayout>
</layout>