<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/set2"
        app:constraintSetStart="@+id/set1"
        app:duration="2000" />

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/set3"
        app:constraintSetStart="@+id/set2"
        app:duration="2000" />

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@+id/set4"
        app:constraintSetStart="@+id/set3"
        app:duration="2000" />

    <ConstraintSet android:id="@+id/set1">
        <Constraint
            android:id="@+id/msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/msg1" />

        <Constraint
            android:id="@+id/msg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/msg2" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/set2"
        app:deriveConstraintsFrom="@id/set1">

        <Constraint
            android:id="@+id/msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/set3"
        app:deriveConstraintsFrom="@id/set2">

        <Constraint
            android:id="@+id/msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/set4"
        app:deriveConstraintsFrom="@id/set3">

        <Constraint
            android:id="@+id/msg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>